@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Rezervasyonlar</h4>
			</div>

			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Misafir</th>
							<th>Giriş Tarihi</th>
							<th>Çıkış Tarihi</th>
							<th>Durum</th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>
									@count
								</td>
								<td>@item.Name</td>
								<td>@item.Checkin.ToString("dd.MM.yyyy")</td>
								<td>@item.Checkout.ToString("dd.MM.yyyy")</td>
								<td>
									<span class="badge badge-primary px-2">@item.Status</span>
								</td>
								<td>
									<a href="/AdminBooking/ApprovedReservation/@item.BookingID" class="btn mb-1 btn-secondary px-5">Onayla</a>
								</td>
								<td>
									<a href="#" class="btn mb-1 btn-danger px-5">İptal Et</a>
								</td>
								<td>
									<a href="#" class="btn mb-1 btn-success px-5">Beklet</a>
								</td>
								<td>
									<a href="#" class="btn mb-1 btn-warning px-5">Detaylar</a>
								</td>


							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
