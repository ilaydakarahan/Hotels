@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Odalar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Resim</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td><img src="@item.RoomCoverImage" style="height:75px;width:75px" /></td>
            <td>@item.Price</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-rounded mb-1 btn-info">Yeni Oda Ekle</a>

